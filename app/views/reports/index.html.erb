<h1>日報一覧</h1>

<div id="reports" class="index-items">
  <% @reports.each do |report| %>
    <div class="index-item">
      <%= render report %>
      <p>
        <%= link_to 'この日報を表示', report %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @reports %>

<nav class="page-nav">
    <%= link_to '日報の新規作成', new_report_path %>
</nav>
