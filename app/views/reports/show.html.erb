<h1>日報の詳細</h1>

<div class="show-item">
  <%= render @report %>
</div>

<nav class="page-nav">
  <% if @report.user_id == current_user.id %>
    <%= link_to 'この本を編集', edit_report_path(@report) %> |
    <%= link_to 'この日報を削除', report_path(@report), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                    } %>
  <% end %>

  <p>
    <%= link_to '日報一覧に戻る', reports_path %>
  </p>

</nav>
